<% layout("layouts/common-template") %>

<!-- 特定のCSS -->
<% head = '<link rel="stylesheet" href="/css/home.css">' %>

<!-- コンテンツ -->
<main class="content">
  <section class="section">
    <% if (pageTitle) { %>
    <h2><%= pageTitle %></h2>
    <% } %>
    <div class="book-list">
      <% for (let novel of novels) { %>
        <div class="book-item">
          <div class="book-cover">
            <img src="<%= novel.cover %>" alt="<%= novel.title %>の表紙">
            <button class="bookmark-button">読みたい＋</button>
          </div>
          <p><%= novel.title %></p>
          <p><%= novel.author.author_name %></p>
        </div>
      <% } %>
    </div>
  </section>
</main>

<!-- 特定のJavaScript -->
<% scripts = '<script src="/js/home.js"></script>' %> 