<% layout("layouts/signup-and-login-template") %> <% head = '<link rel="stylesheet" href="/css/login.css"/>' %> <% head = '<link rel="stylesheet" href="/css/error.css" />' %>

<%= err.message  %>

<div class="error-section">
  <div class="error-content">
    <% if (loginError) { %>
      <% if (loginError.length === 0) { %>
        <h1>404 Not Found</h1>
      <% } else { %>
      <h1><%= loginError %></h1>
      <% } %>
      <div class="go-to-home">
      <form action="/" method="get">
        <button type="submit">ホームに戻る</button>
      </form>
    </div>
  </div>
  <% } else { %>
  <div class="error-content">
    <h1>404 Not Found</h1>
    <div class="go-to-home">
      <form action="/" method="get">
        <button type="submit">ホームに戻る</button>
      </form>
    </div>
  </div>
  <% } %>
</div>
